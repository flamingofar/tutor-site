{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006 -s ./public",
    "build-storybook": "storybook build",
    "prepare": "cd ..&& husky install",
    "pre-commit": "lint-staged",
    "generate": "plop --plopfile generators/plopfile.mjs"
  },
  "dependencies": {
    "@next/font": "13.1.6",
    "lint-staged": "^13.1.2",
    "next": "13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-wrap-balancer": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@storybook/addon-actions": "^7.0.0-beta.53",
    "@storybook/addon-essentials": "^7.0.0-beta.53",
    "@storybook/addon-interactions": "^7.0.0-beta.53",
    "@storybook/addon-links": "^7.0.0-beta.53",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/nextjs": "^7.0.0-beta.53",
    "@storybook/react": "^7.0.0-beta.53",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "clsx": "^1.2.1",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.0",
    "plop": "^3.1.2",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "storybook": "^7.0.0-beta.53",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md,mdx,yml}": [
      "prettier --write"
    ],
    "src/**/*.{js,tsx,ts}": [
      "eslint --max-warnings=0 --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": " npm tsc && npm lint-staged"
  }
}
